<main>
  <div class="container">
    <h2>Login</h2>
    <div class="row">
      <form class="login-form">
          <div class="input-field">
            <label for="email-login" class="active">Email:</label>
            <input class="validate" type="text" id="email" />
          </div>
          <div class="input-field">
            <label for="password-login" class="active">Password:</label>
            <input class="validate" type="password" id="password" />
          </div>
          <div>
            <button class="waves-effect waves-light btn" type="submit" name="action">Login</button>
          </div>
        </div>
      </form>
      <h2>Sign Up</h2>
      <div class="row">
        <form class="signup-form">
            <div class="input-field">
              <input id="username-signup" type="text" class="validate">
              <label class="active" for="username">Username:</label>
            </div>
            <div class="input-field">
              <input id="email-signup" type="text" class="validate">
              <label class="active" for="email">Email:</label>
            </div>
            <div class="input-field">
              <input id="password-signup" type="password" class="validate">
              <label class="active" for="password">Password:</label>
            </div>
            <div>
            <button class="waves-effect waves-light btn" type="submit" name="action">Signup</button>
          </div>
          </div>
        </form>
      </div>
</main>

<script src="./js/login.js"></script>