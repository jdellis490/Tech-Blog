<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{title}}</span>
                <p> {{content}}</p>
                <p>{{user.username}} - {{created_at}}</p>
            </div>
            <div class="card-action">
                <a href="/post/{{id}}"><button class="waves-effect waves-light btn" type="submit"
                        name="action">{{comment.length}} {{format_plural "comment" comments.length}}</button></a>
                <a href="/dashboard/edit/{{id}}"><button class="waves-effect waves-light btn" type="submit"
                        name="action">Edit Post</button></a>
            </div>
        </div>

        {{#each comments}}
        <div>
            <h4>{{user.username}}</h4>
            <br>
            <h6>{{comment_text}}</h6>
            {{/each}}
        </div>
    </div>
</div>