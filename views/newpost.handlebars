<div class="container">
    {{> post-info post}}

    {{#if loggedIn}}

    <div class="row">
        <form class="col s12 add-comment">
            <h2> Add Comment:</h2>
            <div class="row">
                <div class="input-field col s12">
                    <input type="hidden" name="post-id" id="post_id"/>
                    <textarea id="comment" class="materialize-textarea"></textarea>
                    <label for="textarea1">Comment:</label>
                </div>
            </div>
            <div>
                <button class="waves-effect waves-light btn" type="submit" name="action">Add Comment</button>
            </div>
        </form>
    </div>
</div>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}